@model List<UI.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>
<a href="/Category/Create" class="btn btn-primary mb-3">Add Category</a>

<table class="table table-striped">
    <thead>
        <tr><th>Name</th>
        <th>Orders</th>
        </tr>

    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Orders</td>
            </tr>

        }
    </tbody>
</table>

@section Scripts {
    @if (TempData["message"]?.ToString() == "success")
    {
        <script>Swal.fire('Success', 'Category added successfully!', 'success');</script>
    }
    else if (TempData["message"]?.ToString() == "error")
    {
        <script>Swal.fire('Error', 'Failed to add category.', 'error');</script>
    }
}
