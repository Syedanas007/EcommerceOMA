@model List<UI.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>
<a href="/Product/Create" class="btn btn-primary mb-3">Add Product</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Manufacturer</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.ProductCategoryName</td>
                <td>@item.Manufacturer</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                    {
                        <img src="@item.ProductImageUrl" style="width: 50px; height: 50px;" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @if (TempData["message"]?.ToString() == "success")
    {
        <script>Swal.fire('Success', 'Product added successfully!', 'success');</script>
    }
    else if (TempData["message"]?.ToString() == "error")
    {
        <script>Swal.fire('Error', 'Failed to add product.', 'error');</script>
    }
}
