@model LoginViewModel

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Success"] != null)
        {
            <text>Swal.fire('Success', '@TempData["Success"]', 'success');</text>
        }
        else if (TempData["Error"] != null)
        {
            <text>Swal.fire('Error', '@TempData["Error"]', 'error');</text>
        }
    </script>
}

<h2>Login</h2>
<form asp-action="Login" method="post">
    <input asp-for="Username" placeholder="Username" required />
    <input asp-for="Password" type="password" placeholder="Password" required />
    <button type="submit">Login</button>
</form>
