@model IEnumerable<UI.Models.Company>

@{
    ViewData["Title"] = "Company List";
}

<h2>Company List</h2>

<a asp-action="Create" class="btn btn-success mb-2">Create New Company</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Street Address</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Address</th>
            <th>Zip</th>
            <th>Contact Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var company in Model)
    {
        <tr>
            <td>@company.Name</td>
            <td>@company.StreetAddress</td>
            <td>@company.City</td>
            <td>@company.State</td>
            <td>@company.PostalAddress</td>
            <td>@company.Zip</td>
            <td>@company.ContactNumber</td>
            <td>
                <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@company.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
